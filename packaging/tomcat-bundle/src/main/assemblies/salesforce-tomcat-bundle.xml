<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>tomcat</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>  
  <dependencySets>
    <!-- salesforce -->
    <dependencySet>
      <outputDirectory>app-server-tomcat/webapps</outputDirectory>
      <includes>
        <include>${project.groupId}:salesforce-portlets:war</include>
      </includes>
      <outputFileNameMapping>salesforce-portlets.war</outputFileNameMapping>
      <scope>provided</scope>
      <fileMode>0644</fileMode>
    </dependencySet>
    <dependencySet>
      <outputDirectory>app-server-tomcat/webapps</outputDirectory>
      <includes>
        <include>${project.groupId}:salesforce-extension-war:war</include>
      </includes>
      <outputFileNameMapping>salesforce-extension.war</outputFileNameMapping>
      <scope>provided</scope>
      <fileMode>0644</fileMode>
    </dependencySet>	    
    <dependencySet>
      <outputDirectory>app-server-tomcat/lib</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <includes>
        <include>${project.groupId}:salesforce-*:jar</include>
        <include>mysql:mysql-connector-java</include>        
      </includes>
      <scope>provided</scope>
      <fileMode>0644</fileMode>
    </dependencySet>
  </dependencySets>
</assembly>
